{
  "manifest_version": 3,
  "name": "Caption Redirector",
  "version": "1.0",
  "description": "Redirect YouTube captions.js to a custom version",
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://www.youtube.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "redirect_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["captions.js"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
